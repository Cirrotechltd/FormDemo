@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity?.IsAuthenticated == true)
{
    <li class="nav-item d-flex align-items-center me-3">
        <span class="navbar-text d-flex align-items-center">
            <i class="bi bi-person-circle me-2 text-primary"></i>
            <span class="fw-medium">@User.Identity?.Name</span>
        </span>
    </li>
    <li class="nav-item">
        <a class="btn btn-outline-primary btn-sm" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
            <i class="bi bi-box-arrow-right me-1"></i>
            Sign out
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-primary btn-sm" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">
            <i class="bi bi-microsoft me-1"></i>
            Sign in
        </a>
    </li>
}
</ul>
